<!doctype html>
<html>
<head>
	<title>Mojave Web</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
<div class="container">
	<a href="/logout" class="btn btn-default btn-sm" style="float: right; margin-top:10px;">Logout</a>

	<div class="page-header text-center">
		<h1>Profile</h1>
		<h4><a href="/albums">Albums</a></h4>
	</div>

	<div class="row">

		<!-- USER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3>
					<span class="fa fa-user"></span>
					<%= user.firstName %> <%= user.lastName %>

				</h3>

				<img src= <%= user.picture %> />

				<p>
					<strong>userID</strong>: <%= user.userID %><br>
					<strong>email</strong>: <%= user.email %><br>
					<!-- <strong>fbToken</strong>: <%= user.fbToken %><br> -->
					<strong>firstName</strong>: <%= user.firstName %><br>
					<strong>lastName</strong>: <%= user.lastName %><br>
					<strong>friends</strong>: <%= user.friends %><br>
					<strong>albums</strong>: <%= user.albums %><br>
					<strong>currentAlbum</strong>: <%= user.currentAlbum %><br>
					<strong>appPrefs</strong>: <%= user.appPrefs %>
				</p>
			</div>
		</div>

	</div>

</div>
</body>
</html>
